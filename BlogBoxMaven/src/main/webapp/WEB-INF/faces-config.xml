<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <message-bundle>
            <!-- If customizing messages -->
        </message-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnToUser</from-outcome>
            <to-view-id>/user.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>enterBlog</from-outcome>
            <to-view-id>/blog.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>returnToIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/blog.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>addblogpost</from-outcome>
            <to-view-id>/createblogpost.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteblogpost</from-outcome>
            <to-view-id>/editblogpost.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>returnToUser</from-outcome>
            <to-view-id>/user.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>returnToIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>uppdate</from-outcome>
            <to-view-id>/blog.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goToIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginUser</from-outcome>
            <to-view-id>/user.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showBlogPosts</from-outcome>
            <to-view-id>/viewBlogPosts.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToBlogs</from-outcome>
            <to-view-id>/viewBlogs.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/createblogpost.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnToBlog</from-outcome>
            <to-view-id>/blog.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>returnToIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>returnToUser</from-outcome>
            <to-view-id>/user.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/viewBlogs.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showBlogPosts</from-outcome>
            <to-view-id>/viewBlogPosts.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>returnToIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/viewBlogPosts.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnToBlogs</from-outcome>
            <to-view-id>/viewBlogs.xhtml</to-view-id>  
            <redirect/>
        </navigation-case>

    </navigation-rule>
    
</faces-config>
